{
  "$schema": "./conf/v5/schema.json",
  "baseDir": "./md/doc",
  "outDir": "../../doc",
  "glossaries": [
    {
      "file": "./**/*.md"
    },
    {
      "file": "./_references.md",
      "termHint": " ðŸŒŽ",
      "linkUris": true
    },
    {
      "file": "./_pages.md",
      "linkUris": true
    }
  ],
  "keepRawFiles": [
    "README.md"
  ],
  "excludeFiles": [
    "node_modules",
    ".git"
  ],
  "ignoreCase": true,
  "linking": {
    "baseUrl": "https://github.com/about-code/glossarify-md/blob/master/doc/",
    "paths": "absolute",
    "mentions": "first-in-paragraph",
    "headingDepths": [
      1,
      2,
      3,
      4,
      5,
      6
    ],
    "limitByAlternatives": 5
  }
}
