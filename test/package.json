{
  "name": "glossarify-md-testsuite",
  "private": true,
  "version": "1.0.0",
  "description": "glossarify-md test scripts",
  "main": "../bin/index.js",
  "scripts": {
    "debug": "node --inspect-brk ../bin/index.js --config ./gitignore.conf.json",
    "debug-cfg": "node --inspect-brk ../bin/index.js --config",
    "debug-differ": "git diff --minimal --color --no-index --ignore-cr-at-eol ./output-expected ./output-actual | node --inspect-brk ../bin/test.js",
    "pretest": "rm -rf ./output-actual",
    "pretest-win": "del /Q .\\output-actual",
    "test-win": "npm run suite",
    "test": "npm run suite",
    "suite": "npm-run-all test_*",
    "test_00": "node ./conf.spec.js",
    "test_01": "npx . --config ./input/glossarify-md.conf.json",
    "test_02": "npx . --config ./input/config-tailored/config-ignoreCase-true/glossarify-md.conf.json",
    "test_03": "npx . --config ./input/config-tailored/config-ignoreCase-false/glossarify-md.conf.json",
    "test_04": "npx . --config ./input/config-tailored/config-glossaries/glossarify-md.conf.json",
    "test_05": "npx . --config ./input/config-tailored/config-baseUrl/glossarify-md.conf.json",
    "test_06": "npx . --config ./input/config-tailored/config-excludeFiles/glossarify-md.conf.json",
    "test_07": "npx . --config ./input/config-tailored/config-linking/relative/glossarify-md.conf.json",
    "test_08": "npx . --config ./input/config-tailored/config-linking/absolute-baseUrl/glossarify-md.conf.json",
    "test_09": "npx . --config ./input/cli/precedence/glossarify-md.conf.json --baseUrl cli://localhost --linking absolute",
    "postsuite": "git diff --minimal --color --no-index --ignore-cr-at-eol ./output-expected ./output-actual | node ../bin/test.js",
    "new-baseline": "rm -r ./output-expected && mv ./output-actual ./output-expected",
    "new-baseline-win": "del /Q .\\output-expected && rename .\\output-actual .\\output-expected",
    "commit-baseline": "npm test && git reset && git add './package.json' './input' './output-expected' && git commit -m 'test: New baseline.'",
  },
  "author": "Andreas Martin",
  "license": "MIT",
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
