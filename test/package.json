{
  "name": "glossarify-md-testsuite",
  "private": true,
  "version": "0.0.1",
  "description": "glossarify-md test scripts",
  "main": "../bin/index.js",
  "scripts": {
    "debug": "node --inspect-brk ../bin/index.js --config ./input/glossarify-md.conf.json",
    "debug-test": "git diff --minimal --color --no-index ./output-expected ./output-actual | node --inspect-brk ../bin/test.js",
    "pretest": "rm -rf ./output-actual",
    "pretest-win": "del /Q ./output-actual",
    "test":     "npm run test-config-default && npm run test-config-ignoreCase-true && npm run test-config-ignoreCase-false && npm run test-config-glossaries",
    "test-win": "npm run test-config-default && npm run test-config-ignoreCase-true && npm run test-config-ignoreCase-false && npm run test-config-glossaries",
    "test-config-default": "npx . --config ./input/glossarify-md.conf.json",
    "test-config-ignoreCase-true": "npx . --config ./input/features/config-ignoreCase-true/glossarify-md.conf.json",
    "test-config-ignoreCase-false": "npx . --config ./input/features/config-ignoreCase-false/glossarify-md.conf.json",
    "test-config-glossaries": "npx . --config ./input/features/config-glossaries/glossarify-md.conf.json",
    "posttest-win": "git diff --minimal --color --no-index ./output-expected ./output-actual | node ../bin/test.js",
    "posttest": "git diff --minimal --color --no-index ./output-expected ./output-actual | node ../bin/test.js",
    "new-baseline": "rm -r ./output-expected && mv ./output-actual ./output-expected",
    "commit-baseline": "git commit './output-expected/**/*' -m 'test: New baseline.'"
  },
  "author": "Andreas Martin",
  "license": "MIT"
}
