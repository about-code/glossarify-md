{
  "name": "glossarify-md-testsuite",
  "private": true,
  "version": "0.0.1",
  "description": "glossarify-md test scripts",
  "main": "../bin/index.js",
  "scripts": {
    "debug": "node --inspect-brk ../bin/index.js --config ./input/glossarify-md.conf.json",
    "debug-test": "git diff --minimal --color --no-index ./output-expected ./output-actual | node --inspect-brk ../bin/test.js",
    "pretest": "rm -rf ./output-actual",
    "pretest-win": "del /Q .\\output-actual",
    "test": "npm run suite",
    "test-win": "npm run suite",
    "suite": "npm run test-1 && npm run test-2 && npm run test-3 && npm run test-4 && npm run test-5",
    "test-1": "npx . --config ./input/glossarify-md.conf.json",
    "test-2": "npx . --config ./input/features/config-ignoreCase-true/glossarify-md.conf.json",
    "test-3": "npx . --config ./input/features/config-ignoreCase-false/glossarify-md.conf.json",
    "test-4": "npx . --config ./input/features/config-glossaries/glossarify-md.conf.json",
    "test-5": "npx . --config ./input/features/config-baseUrl/glossarify-md.conf.json",
    "postsuite": "git diff --minimal --color --no-index --ignore-cr-at-eol ./output-expected ./output-actual | node ../bin/test.js",
    "new-baseline": "rm -r ./output-expected && mv ./output-actual ./output-expected",
    "commit-baseline": "git commit './output-expected/**/*' -m 'test: New baseline.'"
  },
  "author": "Andreas Martin",
  "license": "MIT"
}
