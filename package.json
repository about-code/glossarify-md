{
  "name": "glossarify-md",
  "version": "6.0.0-alpha.7",
  "description": "Scans markdown files for glossary terms and replaces each occurrence with a link to a glossary file.",
  "author": {
    "name": "Andreas Martin"
  },
  "license": "MIT",
  "exports": {
    "import": "./lib/main.js",
    "require": "./cjs/main.js"
  },
  "main": "./cjs/main.js",
  "type": "module",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/about-code/glossarify-md.git"
  },
  "files": [
    "bin",
    "cjs",
    "lib",
    "conf",
    "conf.schema.json",
    "CHANGELOG.md",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "bin": {
    "glossarify-md": "bin/index.js"
  },
  "scripts": {
    "changelog": "standard-version --dry-run",
    "config": "node ./bin/index.js --config",
    "dconfig": "node --inspect-brk ./bin/index.js --config",
    "debug": "node --inspect-brk ./bin/index.js --config ./debug/glossarify-md.conf.json",
    "debug-config": "npm run dconfig",
    "docs": "npm-run-all docs-*",
    "docs-doc": "node ./bin/index.js --config ./glossarify-md.conf.json",
    "docs-config": "rm -r ./conf/v5/doc && jsonschema2md -n -d ./conf/v5 -e json -o ./conf/v5/doc -x - -h=false -s nullablefact -s typesection -s definedinfact -s proptable",
    "docs-repo": "remark md/README.md > README.md && remark md/CONTRIBUTING.md > CONTRIBUTING.md",
    "fix": "eslint . --fix",
    "linter": "eslint .",
    "pretest": "eslint .",
    "pretest-win": "eslint .",
    "test": "cd ./test && npm test",
    "test-win": "cd .\\test && npm run test-win",
    "v:prepare": "npm run docs && npm run changelog",
    "v:alpha": "standard-version --prerelease alpha",
    "v:beta": "standard-version --prerelease beta",
    "v:release": "standard-version",
    "v:tag": "git add -u && git commit && git tag -D latest && git tag latest",
    "start": "node ./bin/index.js --config ./test/input/glossarify-md.conf.json"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "fs-extra": "^10.0.0",
    "github-slugger": "^1.0.0",
    "glob": "^7.1.7",
    "mdast-builder": "^1.1.1",
    "mdast-util-to-markdown": "^1.2.0",
    "mdast-util-to-string": "^3.1.0",
    "mdast-util-wiki-link": "^0.0.2",
    "micromark-extension-wiki-link": "0.0.4",
    "minimist": "^1.2.5",
    "remark-autolink-headings": "^7.0.1",
    "remark-footnotes": "^4.0.1",
    "remark-gfm": "^2.0.0",
    "remark-parse": "^10.0.0",
    "remark-reference-links": "^6.0.0",
    "remark-stringify": "^10.0.0",
    "unified": "^10.1.0",
    "unified-engine": "^9.0.3",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-visit": "^4.0.0",
    "vfile": "^5.1.1"
  },
  "devDependencies": {
    "@adobe/jsonschema2md": "^6.1.1",
    "eslint": "^7.32.0",
    "npm-run-all": "^4.1.5",
    "remark-cli": "^10.0.0",
    "remark-comment-config": "^7.0.0",
    "remark-license": "^6.0.0",
    "remark-toc": "^8.0.0",
    "standard-version": "^9.3.1"
  },
  "peerDependencies": {
    "inquirer": "^8.1.5"
  },
  "remarkConfig": {
    "settings": {
      "bullet": "-",
      "emphasis": "*",
      "strong": "*",
      "listItemIndent": "1",
      "incrementListMarker": false,
      "fences": true,
      "fence": "`"
    },
    "plugins": {
      "remark-toc": {
        "maxDepth": 3,
        "tight": true
      },
      "remark-license": {
        "name": "Andreas Martin",
        "url": "https://github.com/about-code",
        "ignoreFinalDefinitions": false
      },
      "remark-comment-config": {}
    }
  },
  "standard-version": {
    "skip": {
      "commit": true,
      "tag": true
    }
  },
  "keywords": [
    "glossary",
    "markdown",
    "definitions",
    "terms",
    "index",
    "linking",
    "crosslink",
    "documentation",
    "link",
    "book",
    "vuepress",
    "gitbook"
  ]
}
