{
  "name": "glossarify-md",
  "version": "0.5.0",
  "description": "Scan markdown files for glossary terms and replace each occurence with a link to a glossary file.",
  "main": "bin/index.js",
  "bin": {
    "glossarify-md": "bin/index.js"
  },
  "scripts": {
    "start": "node ./bin/index.js --config ./test/input/glossarify-md.conf.json",
    "debug": "node --inspect-brk ./bin/index.js --config ./test/input/glossarify-md.conf.json"
  },
  "keywords": [
    "glossary",
    "markdown",
    "definitions",
    "terms",
    "index",
    "linking",
    "documentation",
    "link",
    "book"
  ],
  "author": "Andreas Martin",
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^8.1.0",
    "minimist": "^1.2.0",
    "minimist-options": "^4.0.1",
    "remark-autolink-headings": "^5.2.1",
    "remark-parse": "^7.0.1",
    "remark-reference-links": "^4.0.4",
    "remark-slug": "^5.1.2",
    "remark-stringify": "^7.0.2",
    "unified": "^8.3.2",
    "unified-engine": "^7.0.0",
    "unist-builder": "^1.0.4",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-visit": "^2.0.0",
    "unist-util-visit-parents": "^3.0.0"
  },
  "devDependencies": {}
}
