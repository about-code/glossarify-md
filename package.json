{
  "name": "glossarify-md",
  "version": "3.6.2",
  "description": "Scans markdown files for glossary terms and replaces each occurrence with a link to a glossary file.",
  "author": {
    "name": "Andreas Martin"
  },
  "license": "MIT",
  "main": "lib/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/about-code/glossarify-md.git"
  },
  "files": [
    "bin",
    "lib",
    "conf.schema.json",
    "CHANGELOG.md",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "bin": {
    "glossarify-md": "bin/index.js"
  },
  "scripts": {
    "config": "node ./bin/index.js --config",
    "dconfig": "node --inspect-brk ./bin/index.js --config",
    "debug": "node --inspect-brk ./bin/index.js --config ./debug/glossarify-md.conf.json",
    "debug-config": "npm run dconfig",
    "fix": "eslint . --fix",
    "linter": "eslint .",
    "pretest": "eslint .",
    "pretest-win": "eslint .",
    "test": "cd ./test && npm test",
    "test-win": "cd .\\test && npm run test-win",
    "release-alpha": "standard-version --prerelease alpha",
    "release-beta": "standard-version --prerelease beta",
    "release-dry": "standard-version --dry-run",
    "release-stable": "standard-version",
    "start": "node ./bin/index.js --config ./test/input/glossarify-md.conf.json",
    "readme": "remark EDITME.gitignore.md > README.md"
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "github-slugger": "^1.0.0",
    "glob": "^7.0.3",
    "mdast-builder": "^1.1.1",
    "mdast-util-to-string": "^1.1.0",
    "minimist": "^1.2.0",
    "minimist-options": "^4.0.1",
    "remark-autolink-headings": "^5.2.1",
    "remark-burger": "^1.0.1",
    "remark-parse": "^7.0.1",
    "remark-reference-links": "^4.0.4",
    "remark-slug": "^5.1.2",
    "remark-stringify": "^7.0.4",
    "unified": "^8.3.2",
    "unified-engine": "^7.0.0",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-visit": "^2.0.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "remark-cli": "^7.0.1",
    "remark-comment-config": "^5.1.1",
    "remark-license": "^5.1.0",
    "remark-toc": "^7.0.0",
    "standard-version": "^7.0.0"
  },
  "remarkConfig": {
    "settings": {
      "bullet": "-",
      "emphasis": "*",
      "strong": "*",
      "listItemIndent": "1",
      "incrementListMarker": false,
      "fences": true,
      "fence": "`"
    },
    "plugins": {
      "remark-toc": {
        "maxDepth": 3,
        "tight": true
      },
      "remark-license": {
        "name": "Andreas Martin",
        "url": "https://github.com/about-code",
        "ignoreFinalDefinitions": false
      },
      "remark-comment-config": {}
    }
  },
  "standard-version": {
    "skip": {
      "commit": true,
      "tag": true
    }
  },
  "keywords": [
    "glossary",
    "markdown",
    "definitions",
    "terms",
    "index",
    "linking",
    "crosslink",
    "documentation",
    "link",
    "book",
    "vuepress",
    "gitbook"
  ]
}
