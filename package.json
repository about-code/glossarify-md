{
  "name": "glossarify-md",
  "version": "3.1.0",
  "description": "Scans markdown files for glossary terms and replaces each occurrence with a link to a glossary file.",
  "main": "lib/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/about-code/glossarify-md.git"
  },
  "bin": {
    "glossarify-md": "bin/index.js"
  },
  "scripts": {
    "start": "node ./bin/index.js --config ./test/input/glossarify-md.conf.json",
    "debug": "node --inspect-brk ./bin/index.js --config ./debug/glossarify-md.conf.json",
    "debug-cfg": "node --inspect-brk ./bin/index.js --config",
    "config": "node ./bin/index.js --config",
    "test": "cd ./test && npm test",
    "test-win": "cd .\\test && npm run test-win",
    "dry-release": "standard-version --dry-run",
    "alpha-release": "standard-version --prerelease alpha",
    "beta-release": "standard-version --prerelease beta",
    "stable-release": "standard-version"
  },
  "files": [
    "bin",
    "lib",
    "conf.schema.json",
    "CHANGELOG.md",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "glossary",
    "markdown",
    "definitions",
    "terms",
    "index",
    "linking",
    "documentation",
    "link",
    "book",
    "vuepress"
  ],
  "author": {
    "name": "Andreas Martin",
    "email": "about-code@users.noreply.github.com"
  },
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^8.1.0",
    "github-slugger": "^1.0.0",
    "glob": "^7.0.3",
    "mdast-builder": "^1.1.1",
    "minimist": "^1.2.0",
    "minimist-options": "^4.0.1",
    "remark-autolink-headings": "^5.2.1",
    "remark-parse": "^7.0.1",
    "remark-reference-links": "^4.0.4",
    "remark-slug": "^5.1.2",
    "remark-stringify": "^7.0.2",
    "unified": "^8.3.2",
    "unified-engine": "^7.0.0",
    "unist-builder": "^1.0.4",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-visit": "^2.0.0",
    "unist-util-visit-parents": "^3.0.0",
    "vfile": "^4.0.2"
  },
  "devDependencies": {
    "standard-version": "^7.0.0"
  }
}
